<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.iotechn.unimall.data.mapper.OrderSkuMapper">

    <select id="statistics" resultType="com.iotechn.unimall.data.dto.order.OrderStatisticsDTO">
        SELECT
            spu_id AS spuId,
            spu_title AS spuTitle,
            sku_id AS skuId,
            title AS skuTitle,
            sum(num) AS num
        FROM
          unimall_order_sku
        WHERE
        order_id in
        <foreach item="orderId" index="index" collection="orderIds" open="(" separator="," close=")">
            #{orderId}
        </foreach>
        GROUP BY
            spu_id,
            spu_title,
            sku_id,
            title
    </select>

</mapper>